{% extends "admin/layout.html.twig" %}

{% block title %}
{{ parent() }}-Admin(utilisateurs)
{% endblock %}

{% block main %}
<div class="container mb-5">
    <h1 class="text-cursive fw-bold">Changer le role de l'utilisateur</h1>
    <a href="{{ path('admin_user') }}" class="link-danger text-decoration-none">
        <i class="fa fa-arrow-alt-circle-left">&nbsp;</i>
        Annuler
    </a>
    {% include "partials/_flashMessages.html.twig" %}
    <h3 class="mt-5">
        {{ user.firstname|capitalize }} {{ user.lastname }}
    </h3>
    <h5>
        Role actuel:
        <span class="badge {{ ('ROLE_SUPER_ADMIN' in user.roles) ? 'bg-success' : ('ROLE_ADMIN' in user.roles)
            ? 'bg-primary' : 'bg-warning' }}">
            {{ ("ROLE_SUPER_ADMIN" in user.roles) ? "super administrateur" : ("ROLE_ADMIN" in user.roles) ?
            "administrateur" :
            "client" }}
        </span>
    </h5>
    <div class="mt-5" style="max-width: 350px;">
        {{ form_start(form) }}
        {{ form_widget(form.roles) }}
        {{ form_errors(form.roles) }}
        <button type="submit" class="btn btn-warning w-100 mt-3">
            <i class="fa fa-save">&nbsp;</i>
            Appliquer
        </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}