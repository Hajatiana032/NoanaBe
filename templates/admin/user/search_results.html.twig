{% extends 'admin/layout.html.twig' %}

{% block title %}
  {{ parent() }}-Admin(utilisateurs)
{% endblock %}

{% block search %}
  {{ include('components/AdminSearchBar.html.twig', { path: path('admin_user_search') }) }}
{% endblock %}

{% block main %}
  <div class="container mb-5">
    <h1 class="text-cursive fw-bold">Résultats de la recherche pour: "{{ query }}"</h1>

    {% if users %}
      <h5>Nombre de résultats: {{ users|length }}</h5>
    {% endif %}

    {% include 'admin/user/_table.html.twig' %}
  </div>
{% endblock %}
