{% extends 'admin/layout.html.twig' %}

{% block title %}
  {{ parent() }}-Admin(catégories)
{% endblock %}

{% block search %}
  {{ include('components/AdminSearchBar.html.twig', { path: path('admin_category_search') }) }}
{% endblock %}

{% block main %}
  <div class="container mb-5">
    <h1 class="text-cursive fw-bold">Liste des catégories</h1>
    {% include 'partials/_flashMessages.html.twig' %}
    <a href="{{ path('admin_category_new') }}" class="btn btn-primary mb-2">
      <i class="fa fa-add">&nbsp;</i>
      Ajouter une catégorie
    </a>
    {% include 'admin/category/_table.html.twig' %}
  </div>
{% endblock %}
