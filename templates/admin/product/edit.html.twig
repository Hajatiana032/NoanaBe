{% extends 'admin/layout.html.twig' %}

{% block title %}
  {{ parent() }}-Admin(produits)
{% endblock %}

{% block search %}
  {{ include('components/AdminSearchBar.html.twig', { path: path('admin_product_search') }) }}
{% endblock %}

{% block main %}
  <div class="container mb-5">
    <h1 class="text-cursive fw-bold">Modifications du produit "{{ product.title }}"</h1>
    <a href="{{ path('admin_product') }}" class="link-danger text-decoration-none">
      <i class="fa fa-arrow-alt-circle-left">&nbsp;</i>
      Annuler
    </a>
    <div class="mt-5 m-auto" style="max-width: 350px;">
      <div class="text-center">
        <img src="{{ asset('img/uploads/' ~ product.image) }}" alt="{{ product.image }}" width="250px" class="text-center" />
      </div>
      {{ form_start(form) }}
      {{ include('admin/product/_form.html.twig') }}
      <button type="submit" class="btn btn-warning mt-3">
        <i class="fa fa-save">&nbsp;</i>
        Appliquer les modifications
      </button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
