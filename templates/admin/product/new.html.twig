{% extends 'admin/layout.html.twig' %}

{% block title %}{{ parent() }}-Admin(produits){% endblock %}

{% block search %}
{% include "components/AdminSearchBar.html.twig" with {path: path('admin_product_search')} %}
{% endblock %}

{% block main %}
<div class="container mb-5">
    <h1 class="text-cursive fw-bold">Ajout d'un produit</h1>
    <a href="{{ path('admin_product') }}" class="link-danger text-decoration-none">
        <i class="fa fa-arrow-alt-circle-left">&nbsp;</i>
        Annuler
    </a>

    <div class="mt-5 m-auto" style="max-width: 350px;">
        {{ form_start(form) }}
        {% include "admin/product/_form.html.twig" %}
        <button class="btn btn-primary mt-3">
            <i class="fa fa-save">&nbsp;</i>
            Enregistrer
        </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}