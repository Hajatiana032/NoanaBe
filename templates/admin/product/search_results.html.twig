{% extends 'admin/layout.html.twig' %}

{% block title %}
  {{ parent() }}-Admin(produits)
{% endblock %}

{% block search %}
  {{ include('components/AdminSearchBar.html.twig', { path: path('admin_product_search') }) }}
{% endblock %}

{% block main %}
  <div class="container mb-5">
    <h1 class="text-cursive fw-bold">Résultats de la recherche pour: "{{ query }}"</h1>

    {% if products %}
      <h5>Nombre de résultats: {{ products|length }}</h5>
    {% endif %}

    {% include 'admin/product/_table.html.twig' %}
    {{ knp_pagination_render(products) }}
  </div>
{% endblock %}
