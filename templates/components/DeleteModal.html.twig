<div class="modal fade" id="{{ id }}" tabindex=" -1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog"
    aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="modalTitleId">
                    {{ title }}
                </h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fa fa-warning text-danger fs-2 fa-beat-fade">&nbsp;</i>
                <p>
                    {{ message }}
                </p>
            </div>
            <div class="modal-footer">
                <a href="{{ path }}" class="btn btn-danger">
                    <i class="fa fa-check">&nbsp;</i>
                    OUI
                </a>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
                    <i class="fa fa-ban">&nbsp;</i>
                    NON
                </button>
            </div>
        </div>
    </div>
</div>